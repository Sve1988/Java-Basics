package Week3;

import java.util.Scanner;

public class FruitShop {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String fruit = scanner.nextLine();
        String day = scanner.nextLine();
        double quantity = Double.parseDouble(scanner.nextLine());

        switch (day) {
            case "Monday":
            case "Tuesday":
            case "Wednesday":
            case "Thursday":
            case "Friday":
                if (fruit.equals("banana")) {
                    double bananaPrice = 2.5;
                    double bananaFinal = quantity * bananaPrice;
                    System.out.printf("%.2f", bananaFinal);
                } else if (fruit.equals("apple")) {
                    double applePrice = 1.2;
                    double appleFinal = quantity * applePrice;
                    System.out.printf("%.2f", appleFinal);
                } else if (fruit.equals("orange")) {
                    double orangePrice = 0.85;
                    double orangeFinal = quantity * orangePrice;
                    System.out.printf("%.2f", orangeFinal);
                } else if (fruit.equals("grapefruit")) {
                    double grapefruitPrice = 1.45;
                    double grapefruitFinal = quantity * grapefruitPrice;
                    System.out.printf("%.2f", grapefruitFinal);
                } else if (fruit.equals("kiwi")) {
                    double kiwiPrice = 2.7;
                    double kiwiFinal = quantity * kiwiPrice;
                    System.out.printf("%.2f", kiwiFinal);
                } else if (fruit.equals("pineapple")) {
                    double pineapplePrice = 5.5;
                    double pineappleFinal = quantity * pineapplePrice;
                    System.out.printf("%.2f", pineappleFinal);
                } else if (fruit.equals("grapes")) {
                    double grapesPrice = 3.85;
                    double grapesFinal = quantity * grapesPrice;
                    System.out.printf("%.2f", grapesFinal);
                } else {
                    System.out.println("error");
                }
                break;
            case "Saturday":
            case "Sunday":
                if (fruit.equals("banana")) {
                    double bananaPrice = 2.7;
                    double bananaFinal = quantity * bananaPrice;
                    System.out.printf("%.2f", bananaFinal);
                } else if (fruit.equals("apple")) {
                    double applePrice = 1.25;
                    double appleFinal = quantity * applePrice;
                    System.out.printf("%.2f", appleFinal);
                } else if (fruit.equals("orange")) {
                    double orangePrice = 0.9;
                    double orangeFinal = quantity * orangePrice;
                    System.out.printf("%.2f", orangeFinal);
                } else if (fruit.equals("grapefruit")) {
                    double grapefruitPrice = 1.60;
                    double grapefruitFinal = quantity * grapefruitPrice;
                    System.out.printf("%.2f", grapefruitFinal);
                } else if (fruit.equals("kiwi")) {
                    double kiwiPrice = 3;
                    double kiwiFinal = quantity * kiwiPrice;
                    System.out.printf("%.2f", kiwiFinal);
                } else if (fruit.equals("pineapple")) {
                    double pineapplePrice = 5.6;
                    double pineappleFinal = quantity * pineapplePrice;
                    System.out.printf("%.2f", pineappleFinal);
                } else if (fruit.equals("grapes")) {
                    double grapesPrice = 4.2;
                    double grapesFinal = quantity * grapesPrice;
                    System.out.printf("%.2f", grapesFinal);
                } else {
                    System.out.println("error");
                }
                break;
            default:
                System.out.println("error");
                break;
        }
    }
}
